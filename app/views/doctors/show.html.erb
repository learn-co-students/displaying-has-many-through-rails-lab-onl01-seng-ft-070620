<h1><%= @doctor.name %></h1>
<p>
    Department: <%= @doctor.department %><br>
    Appointments: 
        <% @doctor.appointments.each do |a| %>
            <%= link_to a.patient.name, patient_path(a.patient) %><br>
            <%= link_to a.appointment_datetime.strftime("%B %d, %Y at %k:%M"), appointment_path(a) %><br>
        <% end %>
